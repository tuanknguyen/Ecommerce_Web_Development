<div class="page-wrapper">
    <div class="container">
      <div class="row">
        <div class="main object-non-visible" data-animation-effect="fadeInUpSmall" data-effect-delay="100">
        <div class="form-block center-block p-30 light-gray-bg border-clear text-left">
          <h2 class="title">Đăng ký</h2>
          
          <%= form_for @user , html: { class: "form-horizontal" } do |f| %>   
            <% if @user.errors.any? %>
              <div id="error_explanation">
                <h3>Đã có <%=@user.errors.count%> lỗi xảy ra:</h3>
                <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :email, class: "col-sm-3 control-label"%>
              <div class="col-sm-8">
                <%= f.text_field :email, class: "form-control" , id: "email", :required => true %>
              </div>
            </div>
            
            <div class="form-group">
               <%= f.label :user_name, "Họ và tên", for: "username", class: "col-sm-3 control-label"%>
              <div class="col-sm-8">
                 <%= f.text_field :user_name, class: "form-control", id: "username", :required => true%>
              </div>
            </div>
            
            <div class="form-group">
             <%= f.label :address, "Địa chỉ", for: "address", class: "col-sm-3 control-label"%>
              <div class="col-sm-8">
                 <%= f.text_area :address, class: "form-control", id: "address", :required => true%>
              </div>
            </div>
            
            <div class="form-group">
             <%= f.label :telephone, "Số điện thoại", for: "address", class: "col-sm-3 control-label"%>
              <div class="col-sm-8">
                 <%= f.text_field :telephone, class: "form-control", id: "telephone", :required => true%>
              </div>
            </div>
            
            <div class="form-group">
             <%= f.label :password, "Mật khẩu", for: "password", class: "col-sm-3 control-label"%>
              <div class="col-sm-8">
                 <%= f.password_field :password, class: "form-control", id: "password", :required => true%>
              </div>
            </div>
            
            <div class="form-group">
             <%= f.label :password_confirmation, "Nhập lại mật khẩu", for: "password_confirmation", class: "col-sm-3 control-label"%>
              <div class="col-sm-8">
                 <%= f.password_field :password_confirmation, class: "form-control", id: "password_conirmation", :required => true%>
              </div>
            </div>
            
            <div class="form-group">
             <%= f.label :refer_code, "Mã giới thiệu", for: "refer_code", class: "col-sm-3 control-label"%>
              <div class="col-sm-8">
                 <%= f.text_field :refer_code, class: "form-control", id: "refer_code" %>
              </div>
            </div>
            
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-8">
                <div class="checkbox">
                  <label>
                    <input type="checkbox" required> Đồng ý với <a href="#">điều khoản sử dụng</a> của Fa#
                  </label>
                </div>
              </div>
            </div>
            
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-8">
                <%= button_tag(type: 'submit', class: "btn btn-group btn-default btn-animated") do %>
                  <i class="fa fa-check"></i> Đăng ký
                <% end %>
              </div>
            </div>
          <% end %> 
        </div>
        </div>
      </div>
    </div>
</div>
