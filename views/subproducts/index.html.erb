<p id="notice"><%= notice %></p>

<h1>Listing Subproducts</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th>Color</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subproducts.each do |subproduct| %>
      <tr>
        <td><%= subproduct.size%></td>
        <td><%= subproduct.color%></td>
        <td><%= subproduct.quantity %></td>
        <td><%= link_to 'Show', subproduct %></td>
        <td><%= link_to 'Edit', edit_subproduct_path(subproduct) %></td>
        <td><%= link_to 'Destroy', subproduct, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

