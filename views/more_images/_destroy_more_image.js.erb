$('#more-image-<%=params[:id]%>').fadeOut(300, function() { 
    $(this).remove(); 
    <% for i in (params[:id].to_i+1)...(@product[:more_images].length+1)%>
    $('#more-image-<%= i %>').children('a').attr("href","<%=product_more_image_path(@product, i-1)%>");
    $('#more-image-<%= i %>').attr("id","more-image-<%= i-1 %>");
    
    <% end %>
    $('[id^="more-image"]>a').removeClass('inactive');
});
