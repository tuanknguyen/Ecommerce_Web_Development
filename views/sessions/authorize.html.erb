<% if flash[:alert] %>
  <p id="notice" style="display:none;"><%= flash[:alert] %></p>
<% end %>

<div class="page-wrapper">
<!-- main-container start -->
<!-- ================ -->
	<div class="main-container">
		<div class="container">
			<div class="row">
				<!-- main start -->
				<!-- ================ -->
				<div class="main object-non-visible" data-animation-effect="fadeInUpSmall" data-effect-delay="100">
					<div class="form-block center-block p-30 light-gray-bg border-clear">
						<h2 class="title">Đăng nhập</h2>
						<%= form_tag  '#', class: "form-horizontal" do |f| %> 
							<div class="form-group has-feedback">
							  <%= label_tag :email, "Email", class: "col-sm-3 control-label"%>
								
								<div class="col-sm-8">
								  <%= text_field_tag :email, params[:email] , class: "form-control" , id: "email", :required => true do %>
								    <i class="fa fa-user form-control-feedback"></i>
								  <% end %>
								</div>
							</div>
							<div class="form-group has-feedback">
								<%= label_tag :password, "Mật khẩu" ,class: "col-sm-3 control-label"%>
								<div class="col-sm-8">
									<%= password_field_tag :password, params[:password] , class: "form-control", id: "password", :required => true do%>
									  <i class="fa fa-lock form-control-feedback"></i>
									<% end %>
								</div>
								<div class="col-sm-offset-3 col-sm-8">
			            			<div class="space-top">
										<a href="/forgot_password" style="color: #dc5b5b">Quên mật khẩu?</a>
									</div>
		            			</div>
							</div>
							<div class="form-group has-feedback">
								<div class="col-sm-offset-3 col-sm-8">
									 <%= button_tag(type: 'submit', class: "btn btn-group btn-default btn-animated") do %>
									 		<i class="fa fa-user"></i> Đăng nhập
									 <% end %>
									 <%= button_to register_path , method: :get , class: "btn btn-group btn-default btn-animated" do %>
						              	<span>Đăng ký</span> <i class="fa fa-check"></i>
						              <% end %>
								</div>
							</div>
							
							
						<% end %>
						
		        	
					</div>
				</div>
				<!-- main end -->
			</div>
		</div>
	</div>
<!-- main-container end -->
</div>