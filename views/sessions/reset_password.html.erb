
<div class="page-wrapper">
<!-- main-container start -->
<!-- ================ -->
	<div class="main-container">
		<div class="container">
			<div class="row">
				<!-- main start -->
				<!-- ================ -->
				<div class="main object-non-visible" data-animation-effect="fadeInUpSmall" data-effect-delay="100">
					<div class="form-block center-block p-30 light-gray-bg border-clear">
						<h2 class="title">Đặt lại mật khẩu</h2>
						<%= form_for '/reset_password', html:{class: "form-horizontal"} do |f| %>
							<div class="form-group has-feedback">
							  <label class="control-label col-sm-6" style="text-align:left">
							  	Email của bạn là: <%= @user.email%>
							  </label>
							</div>
							<div class="form-group has-feedback">
								<%= label_tag :password, "Mật khẩu mới:" ,class: "col-sm-3 control-label", style:"text-align:left"%>
								<div class="col-sm-8">
									<%= password_field_tag :password, params[:password] , class: "form-control", id: "password-reset-password", :required => true do%>
									  <i class="fa fa-lock form-control-feedback"></i>
									<% end %>
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-8">
									<div class="checkbox">
															<label>
																<input type="checkbox" value="" id="show-password-reset-password">
																Hiển thị mật khẩu

															</label>
										</div>
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-8 space-top">
									<%= submit_tag "Đặt lại mật khẩu", class: "btn btn-group btn-default" %>
								</div>
							</div>
						<% end %>
						
		        	
					</div>
				</div>
				<!-- main end -->
			</div>
		</div>
	</div>
<!-- main-container end -->
</div>


<script>
    $(function(){
		var control = $('#show-password-reset-password');

        control.bind('click', function () {
            if (control.is(':checked')) {
                $('#password-reset-password').attr('type', 'text');
            } else {
                $('#password-reset-password').attr('type', 'password');
            }
        });
	});
</script>