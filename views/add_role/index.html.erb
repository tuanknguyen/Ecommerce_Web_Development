<p id="notice"><%= notice %></p>

<h1>User</h1>

<table>
  <thead>
    <tr>
      <th>email</th>
      <th>user name</th>
      <th>ID</th>
      <th>address</th>
      <th>role</th>
      <th>status</th>
      <th>phone number</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.user_name %></td>
        <td><%= user.id %></td>
        <td><%= user.address %></td>
        
        <% case user.roles_mask %>
          <% when 1 %>
            <td>visitor</td>
          <% when 2 %>
            <td>admin</td>
          <% when 3%>
            <td>super admin</td>
        <% end%>
        
        <td><%= user.status %></td>
        <td><%= user.telephone %></td>
        <td><%= link_to 'Edit', controller: 'add_role', action: 'edit', id: user.id %></td>
        <td><%= link_to 'Destroy',user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
